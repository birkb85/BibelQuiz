<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.bonnicksens.birkb.bibelquiz" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ikon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

            <!-- android:screenOrientation="sensorLandscape" > -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreparingActivity"
            android:label="@string/title_activity_preparing" >
        </activity>
        <activity
            android:name=".MultipleChoiceQuestionActivity"
            android:label="@string/title_activity_multiple_choice_question" >
        </activity>
        <activity
            android:name=".ValidateAnswerActivity"
            android:label="@string/title_activity_validate_answer" >
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name=".SequenceQuestionActivity"
            android:label="@string/title_activity_sequence_question" >
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_contact" >
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
    </application>

</manifest>
